<Application
    x:Class="Virtual_Piano.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Dark"
    >

    <Application.Resources>
        
        <!--Style-->
        <Style TargetType="FlyoutPresenter">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="SkyBlue"/>
            <Setter Property="Background" Value="Black"/>
        </Style>

        <!--SolidColorBrush-->
        <SolidColorBrush x:Key="SystemColorControlAccentBrush" Color="SkyBlue"/>
        
        <SolidColorBrush x:Key="HyperlinkButtonForeground" Color="SkyBlue"/>

        <SolidColorBrush x:Key="ListViewItemBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="SkyBlue" />
        <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="SkyBlue" />
        <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="SkyBlue" />
        <SolidColorBrush x:Key="ListViewItemForeground" Color="SkyBlue" />
        <SolidColorBrush x:Key="ListViewItemForegroundPointerOver" Color="SkyBlue" />
        <SolidColorBrush x:Key="ListViewItemForegroundSelected" Color="Black" />

        <SolidColorBrush x:Key="ButtonBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ButtonForeground" Color="SkyBlue" />
        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="SkyBlue" />
        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="SkyBlue" />
        <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="Gray" />
        <SolidColorBrush x:Key="ButtonBorderBrush" Color="SkyBlue" />
        <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="SkyBlue" />
        <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="SkyBlue" />
        <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="SkyBlue" />

        <Thickness x:Key="ButtonBorderThemeThickness">1</Thickness>

    </Application.Resources>
</Application>