<UserControl
    x:Class="Virtual_Piano.Controls.ProgramCarousel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:elements="using:Virtual_Piano.Elements"
    mc:Ignorable="d"
    d:DesignWidth="400"
    d:DesignHeight="200"
    >

    <UIElement.Clip>
        <RectangleGeometry x:Name="Geometry"/>
    </UIElement.Clip>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <elements:Carousel x:Name="Carousel0"/>
        <elements:Carousel x:Name="Carousel1" Grid.Column="1"/>
        <elements:Carousel x:Name="Carousel2" Grid.Column="2"/>
    </Grid>
</UserControl>