<Page
    x:Class="Virtual_Piano.TestApp.DigitalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:elements="using:Virtual_Piano.Elements"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
    >

    <StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
        <elements:DigitalTimer Time="00:00:03.14" Background="Black" />
        <elements:DigitalFloat Value="123.45" Background="Black" />
        <elements:DigitalScorer x:Name="DigitalScorer" Denominator="5" Numerator="9" Background="Black" />

        <Slider x:Name="Slider1" Value="5" Minimum="0" Maximum="9"/>
        <Slider x:Name="Slider2" Value="9" Minimum="0" Maximum="9"/>
    </StackPanel>
</Page>