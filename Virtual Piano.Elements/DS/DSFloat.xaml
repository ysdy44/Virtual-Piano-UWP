<StackPanel
    x:Class="Virtual_Piano.Elements.DSFloat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="50"
    Orientation="Horizontal"
    Spacing="4"
    Height="26"
    HorizontalAlignment="Center" 
    VerticalAlignment="Center"
    >

    <FrameworkElement.Resources>
        <!--Style-->
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </FrameworkElement.Resources>

    <PathIcon Width="{x:Bind W}" Height="{x:Bind H}" Data="{x:Bind N100}"/>
    <PathIcon Width="{x:Bind W}" Height="{x:Bind H}" Data="{x:Bind N10}"/>
    <PathIcon Width="{x:Bind W}" Height="{x:Bind H}" Data="{x:Bind N1}"/>
    <TextBlock>
        .
    </TextBlock>
    <PathIcon Width="{x:Bind W}" Height="{x:Bind H}" Data="{x:Bind F1}"/>
    <PathIcon Width="{x:Bind W}" Height="{x:Bind H}" Data="{x:Bind F10}"/>
    
</StackPanel>